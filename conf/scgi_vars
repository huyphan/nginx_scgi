scgi_var  REMOTE_ADDR        $remote_addr;
scgi_var  REMOTE_PORT        $remote_port;
scgi_var  SERVER_ADDR        $server_addr;
scgi_var  SERVER_PORT        $server_port;
scgi_var  SERVER_NAME        $server_name;
