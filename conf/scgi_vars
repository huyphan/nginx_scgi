scgi_var  CONTENT_TYPE       $content_type;

## scgi_var  SCRIPT_NAME        $fastcgi_script_name;
scgi_var  REQUEST_URI        $request_uri;
scgi_var  DOCUMENT_URI       $document_uri;
scgi_var  DOCUMENT_ROOT      $document_root;
